page {
  background: #f4f4f4;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
view,
text,
picker,
button {
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}
button {
  background: none;
  outline: none;
  border: none;
}
button::after {
  border: none;
}
.empty {
  width: 100%;
  text-align: center;
  color: #aaaaaa;
  padding: 20rpx;
  font-size: 26rpx;
}
.empty_con {
  margin-top: 35%;
  text-align: center;
}
.empty_con image {
  display: block;
  width: 200rpx;
  height: auto;
  margin: 0 auto 20rpx;
}
.window {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  z-index: 99;
}

