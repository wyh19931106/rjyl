.input_pwd {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  z-index: 99;
}
.input_pwd .input_pwd_box {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: #ffffff;
  box-shadow: 1rpx 1rpx 5rpx 5rpx rgba(255, 255, 255, 0.2);
  border-radius: 10rpx;
  text-align: center;
  width: 500rpx;
  height: 310rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.input_pwd .input_pwd_box .title {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  color: #000;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}
.input_pwd .input_pwd_box .input {
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}
.input_pwd .input_pwd_box .handle {
  width: 100%;
  height: 90rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  display: flex;
}
.input_pwd .input_pwd_box .handle .item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.input_pwd .input_pwd_box .handle .cancel {
  color: #999999;
  border-right: 1rpx solid rgba(0, 0, 0, 0.1);
}
.input_pwd .input_pwd_box .handle .confirm {
  color: #e70014;
}

