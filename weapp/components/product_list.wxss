.product_list .list {
  width: 100%;
  height: auto;
  display: flex;
  flex-wrap: wrap;
}
.product_list .list .item {
  width: 50%;
  padding-bottom: 25rpx;
  height: auto;
  overflow: hidden;
}
.product_list .list .item .img image {
  display: flex;
  width: 100%;
  height: auto;
}
.product_list .list .item .title {
  font-size: 36rpx;
  color: #303030;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.product_list .list .item .price {
  margin-top: 5rpx;
  display: flex;
  align-items: center;
}
.product_list .list .item .price .new {
  font-size: 36rpx;
  color: #d80202;
  margin-right: 10rpx;
}
.product_list .list .item .price .old {
  font-size: 26rpx;
  color: #686868;
  text-decoration: line-through;
}
.product_list .list .item .count {
  margin-top: 8rpx;
  font-size: 26rpx;
  color: #303030;
}
.product_list .list .item:nth-child(2n+1) {
  padding-right: 10rpx;
}
.product_list .list .item:nth-child(2n) {
  padding-left: 10rpx;
}
.product_list .list .empty {
  width: 100%;
  text-align: center;
  color: #aaaaaa;
  padding: 20rpx;
  font-size: 26rpx;
}
.product_list .empty {
  width: 100%;
  text-align: center;
  color: #aaaaaa;
  padding: 20rpx;
  font-size: 26rpx;
}
.product_list .empty_con {
  margin-top: 35%;
  text-align: center;
}
.product_list .empty_con image {
  display: block;
  width: 200rpx;
  height: auto;
  margin: 0 auto 20rpx;
}

