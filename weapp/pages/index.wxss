.index .index_swiper image {
  display: block;
  width: 100%;
  height: auto;
}
.index .nav {
  background: #ffffff;
  margin: 20rpx 0;
  display: flex;
  flex-wrap: wrap;
}
.index .nav .nav_item {
  width: 25%;
  text-align: center;
  padding: 15rpx 0;
}
.index .nav .nav_item image {
  width: 90rpx;
  height: 90rpx;
}
.index .nav .nav_item .txt {
  font-size: 26rpx;
  color: #333333;
}
.index .reservation {
  background: #ffffff;
  padding: 0 20rpx;
}
.index .reservation .title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 85rpx;
  position: relative;
  padding-left: 20rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.08);
}
.index .reservation .title .tit {
  font-size: 32rpx;
  color: #03447c;
}
.index .reservation .title .more {
  display: flex;
  align-items: center;
}
.index .reservation .title .more .txt {
  font-size: 24rpx;
  color: #999999;
  margin-right: 5rpx;
}
.index .reservation .title .more image {
  width: 15rpx;
  height: auto;
}
.index .reservation .title:before {
  content: '';
  position: absolute;
  top: 22rpx;
  left: 0;
  width: 12rpx;
  height: 41rpx;
  background: #03447c;
}
.index .reservation .swiper_box {
  height: 270rpx;
  padding: 20rpx 0;
  overflow: hidden;
}
.index .reservation .swiper_box .swiper {
  width: 100%;
  height: 230rpx;
  overflow: hidden;
}
.index .reservation .swiper_box .swiper .slide_item {
  width: 250rpx !important;
  height: 230rpx;
}
.index .reservation .swiper_box .swiper .slide_item image {
  display: block;
  width: 230rpx;
  height: auto;
}
.index .product_box {
  margin-top: 20rpx;
  padding: 0 20rpx;
  background: #ffffff;
}
.index .product_box .title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 85rpx;
  position: relative;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.08);
}
.index .product_box .title .tit {
  font-size: 32rpx;
  color: #03447c;
}
.index .product_box .title .more {
  display: flex;
  align-items: center;
}
.index .product_box .title .more .txt {
  font-size: 24rpx;
  color: #999999;
  margin-right: 5rpx;
}
.index .product_box .title .more image {
  width: 15rpx;
  height: auto;
}
.index .product_box .title:before {
  content: '';
  position: absolute;
  top: 22rpx;
  left: 0;
  width: 12rpx;
  height: 41rpx;
  background: #03447c;
}

