.onlineQuestion {
  padding-top: 70rpx;
}
.onlineQuestion .title {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  width: 100%;
  height: 70rpx;
  padding: 0 25rpx;
  font-size: 38rpx;
  color: #ffffff;
  background: #1b629f;
}
.onlineQuestion .title .tit {
  font-size: 28rpx;
  margin-left: 15rpx;
}
.onlineQuestion .list {
  width: 100%;
  height: auto;
  padding: 0 25rpx;
}
.onlineQuestion .list .list_item {
  font-size: 24rpx;
  color: #333333;
  padding: 0 30rpx;
  border-radius: 5rpx;
  background: #ffffff;
  margin-top: 20rpx;
  padding: 10rpx 30rpx;
}
.onlineQuestion .list .list_item .question {
  padding: 15rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.08);
}
.onlineQuestion .list .list_item .answer {
  padding: 10rpx 0 20rpx;
}
.onlineQuestion .list .list_item .answer .item {
  display: flex;
  min-height: 36rpx;
  line-height: 36rpx;
  padding: 10rpx 0;
}
.onlineQuestion .list .list_item .answer .item image {
  width: 30rpx;
  height: auto;
  margin-right: 20rpx;
}
.onlineQuestion .list .list_item .answer .item .txt {
  flex: 1;
  overflow: hidden;
}
.onlineQuestion .submit {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ffffff;
  font-size: 32rpx;
  background: #03447c;
  height: 78rpx;
  margin: 60rpx 25rpx;
}

