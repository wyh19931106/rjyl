.myRecommend {
  padding-bottom: 50rpx;
}
.myRecommend .list .item {
  display: flex;
  align-items: center;
  height: 134rpx;
  padding: 0 25rpx;
  background: #ffffff;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.08);
}
.myRecommend .list .item .img {
  width: 90rpx;
  height: 90rpx;
}
.myRecommend .list .item .img image {
  width: 100%;
  height: 100%;
}
.myRecommend .list .item .inf {
  flex: 1;
  overflow: hidden;
  margin-left: 20rpx;
}
.myRecommend .list .item .inf .name {
  font-size: 30rpx;
  color: #333333;
}
.myRecommend .list .item .inf .mobile {
  font-size: 24rpx;
  color: #999999;
  margin-top: 6rpx;
}

