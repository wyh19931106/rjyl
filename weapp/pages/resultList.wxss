.resultList {
  padding-top: 100rpx;
}
.resultList .nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background: #ffffff;
  display: flex;
}
.resultList .nav .nav_item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: #333333;
  position: relative;
}
.resultList .nav .active {
  color: #03447c;
}
.resultList .nav .active::before {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  width: 80%;
  transform: translateX(-50%);
  border-bottom: 4rpx solid #03447c;
}
.resultList .list {
  margin-top: 20rpx;
  padding: 0 25rpx;
}
.resultList .list .item {
  padding: 0 25rpx;
  background: #ffffff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}
.resultList .list .item .top {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 134rpx;
  padding: 22rpx 0;
  border-bottom: 1rpx solid #dddddd;
}
.resultList .list .item .top .title {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
}
.resultList .list .item .top .title .no {
  color: #fb5a5a;
}
.resultList .list .item .top .title .time {
  color: #999999;
}
.resultList .list .item .top .look {
  text-align: right;
  font-size: 24rpx;
  color: #03447c;
}
.resultList .list .item .bottom {
  display: flex;
  align-items: center;
  height: 78rpx;
  font-size: 24rpx;
  color: #333333;
}
.resultList .list .item .bottom image {
  width: 22rpx;
  height: auto;
  margin-right: 15rpx;
}

