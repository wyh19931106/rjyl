.login .form {
  margin-top: 25rpx;
  background: #ffffff;
}
.login .form .item {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  height: 100rpx;
  padding: 0 25rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.08);
}
.login .form .item label {
  width: 160rpx;
}
.login .form .item input {
  flex: 1;
  overflow: hidden;
}
.login .form .item:nth-last-child(1) {
  border: none;
}
.login .btn {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #ffffff;
  margin: 100rpx 25rpx 0;
  height: 80rpx;
  background: #03447c;
  border-radius: 8rpx;
}
.login .handle {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #333333;
  padding: 25rpx;
}

