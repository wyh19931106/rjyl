.cardList {
  padding-bottom: 120rpx;
}
.cardList .list {
  padding: 30rpx 25rpx;
}
.cardList .list .item {
  width: 100%;
  height: 180rpx;
  background-image: linear-gradient(90deg, #53a0ff 0%, #8f8fff 100%), linear-gradient(#000000, #000000);
  background-blend-mode: normal, normal;
  border-radius: 10rpx;
  padding: 0 25rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: #ffffff;
  margin-bottom: 25rpx;
}
.cardList .list .item .top {
  display: flex;
  align-items: center;
}
.cardList .list .item .top .logo {
  width: 50rpx;
  height: 50rpx;
}
.cardList .list .item .top .logo image {
  width: 100%;
  height: auto;
}
.cardList .list .item .top .bank_name {
  margin-left: 15rpx;
  font-size: 32rpx;
}
.cardList .list .item .top .bank_name .mark {
  margin-left: 10rpx;
  font-size: 28rpx;
  color: rgba(255, 0, 0, 0.5);
}
.cardList .list .item .bank_no {
  padding-left: 65rpx;
  margin-top: 20rpx;
  font-size: 32rpx;
}
.cardList .bottom_fixed {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background: #ffffff;
  z-index: 9;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cardList .bottom_fixed .btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 480rpx;
  height: 70rpx;
  font-size: 30rpx;
  color: #e70113;
  border-radius: 35rpx;
  border: 1rpx solid #e70113;
}

