.orderService {
  padding-top: 94rpx;
}
.orderService .nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 94rpx;
  background: #ffffff;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.08);
  display: flex;
}
.orderService .nav .nav_item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  font-size: 30rpx;
  color: #333333;
  position: relative;
}
.orderService .nav .active {
  color: #03447c;
}
.orderService .nav .active::before {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  width: 80%;
  transform: translateX(-50%);
  border-bottom: 4rpx solid #03447c;
}
.orderService .con {
  width: 100%;
  height: auto;
  margin-top: 20rpx;
}
.orderService .con .list .item {
  background: #ffffff;
  margin-bottom: 20rpx;
}
.orderService .con .list .item .title {
  display: flex;
  align-items: center;
  height: 100rpx;
  padding: 0 25rpx;
}
.orderService .con .list .item .title image {
  width: 60rpx;
  height: auto;
}
.orderService .con .list .item .title .tit {
  flex: 1;
  overflow: hidden;
  font-size: 30rpx;
  color: #333333;
  margin-left: 10rpx;
}
.orderService .con .list .item .title .status {
  font-size: 30rpx;
  color: #03447c;
}
.orderService .con .list .item .good_list {
  background: #f9f9f9;
}
.orderService .con .list .item .good_list .good_item {
  height: 220rpx;
  display: flex;
  padding: 25rpx 25rpx 25rpx 80rpx;
}
.orderService .con .list .item .good_list .good_item .img {
  width: 170rpx;
  height: 170rpx;
}
.orderService .con .list .item .good_list .good_item .img image {
  width: 100%;
  height: auto;
}
.orderService .con .list .item .good_list .good_item .infor {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  overflow: hidden;
  margin-left: 30rpx;
}
.orderService .con .list .item .good_list .good_item .infor .tit {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 26rpx;
  color: #333333;
}
.orderService .con .list .item .good_list .good_item .infor .mark {
  font-size: 24rpx;
  color: #03447c;
  border: 1rpx solid #03447c;
  border-radius: 5rpx;
  padding: 2rpx 5rpx;
  margin-top: 8rpx;
}
.orderService .con .list .item .good_list .good_item .infor .inf {
  margin-top: 15rpx;
}
.orderService .con .list .item .good_list .good_item .infor .inf .price {
  font-size: 28rpx;
  color: #fc6f48;
}
.orderService .con .list .item .good_list .good_item .infor .inf .qty {
  font-size: 26rpx;
  color: #999999;
  margin-left: 30rpx;
}
.orderService .con .list .item .good_count {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  height: 100rpx;
  padding: 0 25rpx;
  font-size: 28rpx;
  color: #333333;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.08);
}
.orderService .con .list .item .good_count .money {
  color: #fc6f48;
}
.orderService .con .list .item .handle {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  height: 104rpx;
  padding: 0 25rpx;
}
.orderService .con .list .item .handle .btn {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 58rpx;
  padding: 0 30rpx;
  font-size: 26rpx;
  color: #333333;
  border-radius: 29rpx;
  border: 1rpx solid #9d9d9d;
  margin-left: 20rpx;
}
.orderService .con .list .item .handle .active {
  color: #ffffff;
  background: #03447c;
  border: none;
}

