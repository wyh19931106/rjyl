.activityList .list {
  margin-top: 20rpx;
  height: auto;
}
.activityList .list .item {
  display: flex;
  align-items: center;
  height: 270rpx;
  padding: 0 25rpx;
  background: #ffffff;
  margin-bottom: 20rpx;
}
.activityList .list .item .img {
  width: 220rpx;
  height: 220rpx;
  position: relative;
}
.activityList .list .item .img .bg {
  width: 100%;
  height: 100%;
}
.activityList .list .item .img .mark {
  position: absolute;
  top: 0;
  left: 0;
  width: 96rpx;
}
.activityList .list .item .inf {
  flex: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx;
  height: 220rpx;
}
.activityList .list .item .inf .title {
  font-size: 30rpx;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.activityList .list .item .inf .time {
  font-size: 24rpx;
  color: #333333;
}
.activityList .list .item .inf .intro {
  height: 114rpx;
  line-height: 38rpx;
  font-size: 24rpx;
  color: #666666;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

