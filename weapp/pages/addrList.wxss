.addrList {
  padding-bottom: 150rpx;
}
.addrList .list .item {
  background: #ffffff;
  margin-bottom: 20rpx;
}
.addrList .list .item .title {
  display: flex;
  align-items: center;
  padding: 15rpx 25rpx;
}
.addrList .list .item .title .mark {
  color: #f22525;
  border: 1rpx solid #f22525;
  font-size: 22rpx;
  padding: 3rpx 10rpx;
  border-radius: 4rpx;
  margin-right: 10rpx;
}
.addrList .list .item .title .name,
.addrList .list .item .title .tel {
  font-size: 30rpx;
  color: #333333;
}
.addrList .list .item .title .name {
  margin-right: 30rpx;
}
.addrList .list .item .addr {
  display: flex;
  align-items: center;
  padding: 10rpx 10rpx 10rpx 25rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.08);
}
.addrList .list .item .addr .val {
  flex: 1;
  font-size: 26rpx;
  color: #333333;
  overflow: hidden;
}
.addrList .list .item .addr .handle {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
}
.addrList .list .item .addr .handle .edit,
.addrList .list .item .addr .handle .del {
  padding: 10rpx;
}
.addrList .list .item .addr .handle image {
  width: 34rpx;
  height: auto;
}
.addrList .list .item .default {
  display: flex;
  align-items: center;
  height: 76rpx;
  padding: 0 25rpx;
  font-size: 26rpx;
  color: #808080;
}
.addrList .list .item .default image {
  width: 24rpx;
  height: auto;
  margin-right: 8rpx;
}
.addrList .bottom_fixed {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: #ffffff;
  background: #03447c;
}

