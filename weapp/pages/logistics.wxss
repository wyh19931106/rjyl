.logistics .top_show {
  display: flex;
  align-items: center;
  width: 100%;
  padding: 25rpx;
  height: 230rpx;
  background: #ffffff;
}
.logistics .top_show .img {
  width: 160rpx;
  height: 160rpx;
  position: relative;
  overflow: hidden;
}
.logistics .top_show .img image {
  width: 100%;
  height: 100%;
}
.logistics .top_show .infor {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 160rpx;
  margin-left: 20rpx;
}
.logistics .top_show .infor .status {
  display: flex;
  align-items: center;
  font-size: 30rpx;
}
.logistics .top_show .infor .status .txt {
  color: #333333;
}
.logistics .top_show .infor .status .val {
  color: #fc6f48;
  margin-left: 20rpx;
}
.logistics .top_show .infor .company,
.logistics .top_show .infor .no {
  margin-top: 0;
  font-size: 26rpx;
  color: #999999;
}
.logistics .box {
  display: block;
  width: 100%;
  margin-top: 20rpx;
  background: #ffffff;
  position: relative;
}
.logistics .box .br {
  position: absolute;
  left: 45rpx;
  top: 75rpx;
  height: calc(100% - 150rpx);
  width: 2rpx;
  background: #ebebeb;
}
.logistics .box .ul {
  width: 100%;
  padding-left: 80rpx;
}
.logistics .box .ul .li {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  height: 150rpx;
  position: relative;
  overflow: initial;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.08);
}
.logistics .box .ul .li view {
  margin-right: 20rpx;
  color: #b6b6b6;
}
.logistics .box .ul .li .status {
  font-size: 24rpx;
}
.logistics .box .ul .li .time {
  margin-top: 10rpx;
  font-size: 20rpx;
}
.logistics .box .ul .li .small {
  position: absolute;
  left: -40rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 10rpx;
  height: auto;
}
.logistics .box .ul .li:nth-child(1) .status {
  color: #1a2fb0;
}
.logistics .box .ul .li:nth-child(1) .small {
  left: -45rpx;
  width: 20rpx;
}
.logistics .box .ul .li:nth-last-child(1) {
  border: none;
}

