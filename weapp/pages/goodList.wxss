.goodList {
  padding-top: 180rpx;
}
.goodList .top_con {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 180rpx;
  background: #ffffff;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.08);
  z-index: 9;
}
.goodList .top_con .search_con {
  margin: 20rpx 50rpx 0;
  height: 64rpx;
  background: #f1f1f1;
  border-radius: 32rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
}
.goodList .top_con .search_con .icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goodList .top_con .search_con .icon image {
  width: 28rpx;
  height: auto;
}
.goodList .top_con .search_con input {
  flex: 1;
  color: #333;
  font-size: 14px;
}
.goodList .top_con .nav {
  width: 100%;
  height: 90rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
}
.goodList .top_con .nav .item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  font-size: 32rpx;
  color: #333333;
  position: relative;
}
.goodList .top_con .nav .item image {
  width: 14rpx;
  height: auto;
  margin-left: 8rpx;
}
.goodList .top_con .nav .item .mark {
  margin-left: 10rpx;
  margin-top: 8rpx;
  width: 12rpx;
  height: auto;
  transform: rotate(90deg);
}
.goodList .top_con .nav .item .select {
  position: absolute;
  top: 92rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 140rpx;
  height: auto;
  background: #ffffff;
  box-shadow: 1rpx 1rpx 10rpx 10rpx rgba(0, 0, 0, 0.1);
  border-radius: 4rpx;
  padding: 10rpx 0;
}
.goodList .top_con .nav .item .select .options {
  width: 100%;
  height: 60rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #565656;
  text-align: center;
}
.goodList .top_con .nav .item .select .checked {
  color: #d80202;
}
.goodList .top_con .nav .active {
  color: #d80202;
}
.goodList .good_list {
  padding: 20rpx;
  margin-top: 20rpx;
  background: #ffffff;
}

